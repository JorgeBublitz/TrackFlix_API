// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 游븸 Usu치rio do sistema
model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  refreshToken String? // usado com JWT refresh
  createdAt    DateTime @default(now())

  messages Message[]  @relation("UserMessages")
  rooms    RoomUser[]
}

// 游눫 Mensagens enviadas
model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  // rela칞칚o
  senderId String
  roomId   String

  sender User @relation("UserMessages", fields: [senderId], references: [id])
  room   Room @relation(fields: [roomId], references: [id])
}

// 游논 Sala (pode ser chat privado ou grupo)
model Room {
  id        String   @id @default(uuid())
  name      String?
  isGroup   Boolean  @default(false)
  createdAt DateTime @default(now())

  messages Message[]
  users    RoomUser[]
}

// 游댕 Tabela intermedi치ria: usu치rios por sala
model RoomUser {
  id       String   @id @default(uuid())
  userId   String
  roomId   String
  joinedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  room Room @relation(fields: [roomId], references: [id])

  @@unique([userId, roomId])
}
